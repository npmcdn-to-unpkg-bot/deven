@import '../../styles/globals.styl'

.Register.view
  column(center, center)
  width 100%

  .form

    margin-top 25px
    padding-bottom 45px
    column(center, center)
    background WHITE
    width 100%
    max-width 480px
    border-radius 8px
    padding 25px 20px 65px

    h2
      margin-top 20px
      font-family ROBO

    p
      text-align center
      max-width 350px
      margin-bottom 15px

    form
      column(center, center)
      width 80%

      input
        width 100%
        height 40px
        border 1px solid GRAY
        font-size 1.6rem
        padding 8px 12px
        color RED
        margin-bottom 10px

    .buttons
      padding-top 15px
      .submit-button
        font-size 2.0rem
        background white
        font-weight 700
        color RED
        border 3px solid RED
        padding 4px 10px
        margin-left 5px

        &:first-of-type
          margin-left 0
          margin-right 5px
