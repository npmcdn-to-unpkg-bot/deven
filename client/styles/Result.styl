.home.view .results .result
  width: 100%;
  background: white;
  color: #22223b;
  margin-bottom: 15px;
  box-shadow: 0 0 5px rgba(0,0,0,0.2);

  // border-radius: 0px 0px 15px 15px;

  .info.column
    padding: 25px 25px 15px;


  .title
    font-size: 2.6rem;

  .address
    margin-top: 5px;
    font-size: 1.4rem;
    font-weight: 300;
    color: #ca9ce1;
    transition: all .5s;

    &:hover
      color: #340068;

  .description
    margin-top: 5px;
    font-weight: 300;
    font-size: 1.6rem;
    padding-right: 25px;

  .date
    margin-top: 5px;
    font-weight: 300;
    font-size: 1.4rem;
    font-style: italic;
    opacity: 0.5;

  .actions
    font-size: 1.4rem;
    margin-top: 5px;
    padding: 12px 0;
    background: #414361;
    color: white;
